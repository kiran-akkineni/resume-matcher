<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Matcher</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Resume Matcher</h1>
    <form action="/submit" method="post" enctype="multipart/form-data">
        <label for="jobDescriptionFiles">Job Description Files:</label>
        <input type="file" id="jobDescriptionFiles" name="jobDescriptionFiles" accept=".pdf,.txt,.docx">
        <% if (jobDescriptionFilename) { %>
            <span>Loaded file: <%= jobDescriptionFilename %></span>
        <% } else { %>
            <span>No file chosen</span>
        <% } %>
        <br><br>

        <input type="checkbox" id="replaceJobDescription" name="replaceJobDescription" checked>
        <label for="replaceJobDescription">Replace previously selected job description</label><br><br>

        <label for="resumeFiles">Resume Files:</label>
        <input type="file" id="resumeFiles" name="resumeFiles" accept=".pdf,.txt,.docx" multiple><br><br>

        <input type="checkbox" id="replaceResumes" name="replaceResumes">
        <label for="replaceResumes">Replace previously selected resumes</label><br><br>

        <button type="submit">Upload</button>
    </form>

    <% if (resumes.length > 0) { %>
        <h2>Resumes</h2>
        <ul>
            <% resumes.forEach((resume, index) => { %>
                <li>Resume <%= index + 1 %>: <%= resume.name %> -- <%= resume.score %></li>
            <% }) %>
        </ul>
    <% } %>

    <% if (jobDescription) { %>
        <h2>Current Job Description</h2>
        <pre><%= jobDescription %></pre>
    <% } %>
</body>
</html>
